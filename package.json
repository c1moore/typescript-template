{
  "name": "typescript-template",
  "version": "1.0.0",
  "description": "Template for creating a TS project.",
  "main": "dist/index.js",
  "scripts": {
    "clean": "rm -rf ./dist",
    "build": "npm run clean && ./node_modules/.bin/tsc",
    "test": "NODE_ENV=test nyc mocha",
    "test:watch": "nodemon -e js,ts --watch src --watch test --exec \"NODE_ENV=test mocha\"",
    "lint": "eslint src/**/*.ts src/*.ts",
    "lint:fix": "npm run lint -- --fix"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/c1moore/typescript-template.git"
  },
  "keywords": [
    "typescript",
    "ts",
    "template"
  ],
  "author": "Calvin Moore <c1moore>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/c1moore/typescript-template/issues"
  },
  "homepage": "https://github.com/c1moore/typescript-template#readme",
  "devDependencies": {
    "@istanbuljs/nyc-config-typescript": "^1.0.2",
    "@types/chai": "^4.3.0",
    "@types/chai-as-promised": "^7.1.5",
    "@types/mocha": "^9.1.0",
    "@types/node": "^17.0.21",
    "@types/sinon": "^10.0.11",
    "@typescript-eslint/eslint-plugin": "^5.15.0",
    "@typescript-eslint/parser": "^5.15.0",
    "chai": "^4.3.6",
    "chai-as-promised": "^7.1.1",
    "eslint": "^8.11.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-import": "^2.25.4",
    "mocha": "^9.2.2",
    "nodemon": "^2.0.20",
    "nyc": "^15.1.0",
    "sinon": "^13.0.1",
    "ts-node": "^10.7.0",
    "typescript": "^4.6.2"
  },
  "nyc": {
    "extends": "@istanbuljs/nyc-config-typescript",
    "all": true,
    "reporter": [
      "lcov",
      "json",
      "text"
    ],
    "exclude": [
      "**/*.spec.ts",
      "**/*.spec.js",
      "**/dist/**",
      "**/node_modules/**",
      "**/coverage/**",
      "**/test/**"
    ],
    "excludeAfterRemap": false
  },
  "mocha": {
    "require": [
      "ts-node/register",
      "source-map-support/register"
    ],
    "extension": "ts",
    "file": "./test/mocha.init",
    "recursive": true,
    "colors": true,
    "exit": true
  }
}
