{
  "name": "typescript-template",
  "version": "1.0.0",
  "description": "Template for creating a TS project.",
  "main": "dist/index.js",
  "scripts": {
    "clean": "rm -rf ./dist",
    "build": "npm run clean && ./node_modules/.bin/tsc",
    "test": "NODE_ENV=test nyc mocha",
    "test:watch": "nodemon -e js,ts --watch src --watch test --exec \"NODE_ENV=test mocha\"",
    "lint": "eslint src/**/*.ts src/*.ts",
    "lint:fix": "npm run lint -- --fix"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/c1moore/typescript-template.git"
  },
  "keywords": [
    "typescript",
    "ts",
    "template"
  ],
  "author": "Calvin Moore <c1moore>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/c1moore/typescript-template/issues"
  },
  "homepage": "https://github.com/c1moore/typescript-template#readme",
  "devDependencies": {
    "@istanbuljs/nyc-config-typescript": "^1.0.1",
    "@types/chai": "^4.2.18",
    "@types/chai-as-promised": "^7.1.4",
    "@types/mocha": "^8.2.2",
    "@types/node": "^15.12.2",
    "@types/sinon": "^10.0.2",
    "@typescript-eslint/eslint-plugin": "^4.26.1",
    "@typescript-eslint/parser": "^4.26.1",
    "chai": "^4.3.4",
    "chai-as-promised": "^7.1.1",
    "eslint": "^7.28.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-plugin-import": "^2.23.4",
    "mocha": "^9.0.0",
    "nodemon": "^2.0.7",
    "nyc": "^15.1.0",
    "sinon": "^11.1.1",
    "ts-node": "^10.0.0",
    "typescript": "^4.3.2"
  },
  "nyc": {
    "extends": "@istanbuljs/nyc-config-typescript",
    "all": true,
    "reporter": [
      "lcov",
      "json",
      "text"
    ],
    "exclude": [
      "**/*.spec.ts",
      "**/*.spec.js",
      "**/dist/**",
      "**/node_modules/**",
      "**/coverage/**",
      "**/test/**"
    ],
    "excludeAfterRemap": false
  },
  "mocha": {
    "require": [
      "ts-node/register",
      "source-map-support/register"
    ],
    "extension": "ts",
    "file": "./test/mocha.init",
    "recursive": true,
    "colors": true,
    "exit": true
  }
}
