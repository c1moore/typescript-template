{
  "compilerOptions": {
    "alwaysStrict": true,
    "declaration": true,
    "outDir": "dist/",
    "strict": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "target": "ES2017",
    "moduleResolution": "node",
    "module": "commonjs",
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true
  },
  "include": [
    "src/**.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}